<div class="container-fluid">
  <%= render "static/account_nav" %>

  <%= render "static/category_nav" %>

  <div class="row category_index">
    <div class="col-md-8 article">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="row">
            <div class="col-md-12">
              <img src="http://placehold.it/1000x700" class="img-responsive"/>
            </div>
          </div>

          <div class="row thumbnailrow">
            <div class="col-xs-3">
              <img src="http://placehold.it/300x150" class="img-responsive"/>
            </div>
            <div class="col-xs-3">
              <img src="http://placehold.it/300x150" class="img-responsive"/>
            </div>
            <div class="col-xs-3">
              <img src="http://placehold.it/300x150" class="img-responsive"/>
            </div>
            <div class="col-xs-3">
              <img src="http://placehold.it/300x150" class="img-responsive"/>
            </div>
          </div>
          <h1><%= @article.title %></h1>

          <%= link_to 'Edit', edit_article_path(@article) %>


          <p class="byline">By <%= @author.first_name + " " + @author.last_name %> </p>
          <%= simple_format(@article.content) %>



        </div>
      </div>
      <div class="row about_author">
        <div class="col-md-10 col-md-offset-1">
          <h1><span>About author</span></h1>
        </div>
      </div>

      <div class="row about_author">
        <div class="col-md-1">
          <img src="http://placehold.it/100x100" class="img-responsive avatar"/>
        </div>
        <div class="col-md-10">
          <p>
            <%= @author.bio %>
          </p>
        </div>
      </div>
    </div>
    <%= render "breaking" %>
  </div> <!-- category_index -->

  <%= render "static/ourfooter" %>
</div>
